<idea-plugin>
    <id>com.github.meimingqi222.aicommit</id>
    <name>AI Commit Message Generator</name>
    <vendor email="meimingqi222@gmail.com" url="https://github.com/meimingqi222/jetbrains-auto-commit">meimingqi222</vendor>

    <description><![CDATA[
    <p>AI-powered Git commit message generator for JetBrains IDEs. Uses OpenAI-compatible APIs (like DeepSeek) to automatically generate meaningful commit messages based on staged changes.</p>
    <p>Features: multi-language support, custom prompt templates, keyboard shortcuts, and seamless Git integration.</p>
    ]]></description>

    <change-notes><![CDATA[
    Initial release: AI commit message generation with OpenAI-compatible API support.
    ]]></change-notes>

    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- 设置页 -->
        <projectConfigurable
            instance="com.example.aicommit.config.AICommitConfigurable"
            id="AICommit"
            displayName="AI Commit Message"
            groupId="tools"/>
    </extensions>

    <actions>
        <!-- 手动触发动作 -->
        <action
            id="GenerateCommitMessage"
            class="com.example.aicommit.action.GenerateCommitMessageAction"
            text="Generate Commit Message with AI"
            description="Generate commit message using AI"
            icon="AllIcons.Actions.Execute">
            <add-to-group group-id="Vcs.MessageActionGroup" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift M"/>
        </action>
    </actions>
</idea-plugin>
